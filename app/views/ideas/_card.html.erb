
<div class="col">
<div class="card h-100" data-id="<%= idea.id %>">
  <div class="card-header d-flex" style="height: 100px;">
    <h5 class="me-auto"><%= truncate(idea.title, length:60) %></h5>
    <% if logged_in? %>
    <h5>
      <%= button_to toggle_bookmark_idea_path(idea), remote: true, class: "btn btn-outline-primary btn-sm" do %>
      <% if current_user.favorited?(idea) %>
      <i class="bi bi-bookmark-check-fill bookmark-icon" data-id="<%= idea.id %>"></i>
      <% else %>
      <i class="bi bi-bookmark-plus bookmark-icon" data-id="<%= idea.id %>"></i>
      <% end %>
      <% end %>
    </h5>
    <% end %>
    <!-- <h5><span class="badge bg-info"><%= idea.comments.count -%></span></h5> -->
  </div>
  <div class="card-body">
    <p class="card-text text-left" style="height: 100px;">
      <%= truncate(idea.content, length: 100) %>
    </p>
    <p class="card-text">
      <% idea.realms.each do |realm| %>
        <span class="badge text-black" style="background-color: #<%= realm.color -%>"><%= realm.title %></span>
      <% end %>
    </p>
  </div>
  <div class="card-footer text-muted d-grid gap-2">
    <%= link_to "Moreâ€¦", idea, class: "btn btn-outline-primary btn-sm" %>
    <small>Created by: <%= idea.student_number %> on <%= idea.created_at.strftime("%d/%m/%Y") %></small>
  </div>
</div>
</div>
