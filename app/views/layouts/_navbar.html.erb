<nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand d-flex" href="/">
      <i class="bi bi-lightbulb" style="color: orange;"></i>
      SLATE
    </a>

    <div class="nav">
      <ul class="nav me-auto mb-2 mb-lg-0">
        <% if Rails.configuration.x.slate.is_accepting_ideas %>
        <li class="nav-item">
          <%= link_to "Ideas", :ideas, class: "nav-link active" %>
        </li>
        <% end %>
        <% if Rails.configuration.x.slate.is_accepting_pitches %>
        <li class="nav-item">
          <%= link_to "Pitches", :ideas, class: "nav-link" %>
        </li>
        <% end %>
        <% if Rails.configuration.x.slate.is_accepting_projects %>
        <li class="nav-item">
          <%= link_to "Projects", :ideas, class: "nav-link" %>
        </li>
        <% end %>
      </ul>
